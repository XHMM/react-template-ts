{
  "name": "react_test",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "webpack-dev-server --mode=development",
    "dev-dashboard": "webpack-dashboard -- webpack-dev-server --mode=development --quiet=true",
    "build": "webpack --mode=production",
    "test": "jest"
  },
  "keywords": [
    "react",
    "react-boilerplate",
    "typescript"
  ],
  "author": "xhmm",
  "license": "MIT",
  "repository": "https://github.com/XHMM/react-template-ts",
  "dependencies": {
    "react": "16.4.1",
    "react-dom": "16.4.1",
    "typescript": "2.9.2"
  },
  "devDependencies": {
    "@types/jest": "23.1.5",
    "@types/react": "16.4.6",
    "@types/react-dom": "16.0.6",
    "html-webpack-plugin": "3.2.0",
    "jest": "23.3.0",
    "react-testing-library": "4.1.2",
    "ts-jest": "23.0.0",
    "ts-loader": "4.4.2",
    "webpack": "4.15.1",
    "webpack-bundle-analyzer": "2.13.1",
    "webpack-cli": "3.0.8",
    "webpack-dashboard": "2.0.0",
    "webpack-dev-server": "3.1.4"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": ["**/__tests__/**/*.ts?(x)"],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "tests/__tests__/watch.spec.ts"
    ],
    "coverageReporters": [
      "text"
    ],
    "coverageDirectory": "test_coverage_dir",
    "collectCoverageFrom": [
      "src/**/*.tsx",
      "src/**/*.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
