{
  "name": "tsx-starter",
  "version": "1.1.0",
  "description": "",
  "main": "index.js",
  "keywords": [
    "react",
    "react-boilerplate",
    "typescript"
  ],
  "author": "xhmm",
  "license": "MIT",
  "repository": "https://github.com/XHMM/react-template-ts",
  "scripts": {
    "dev": "webpack-dev-server --mode=development",
    "build": "webpack --mode=production",
    "test": "jest"
  },
  "dependencies": {
    "react": "16.4.2",
    "react-dom": "16.4.2",
    "typescript": "3.0.1"
  },
  "devDependencies": {
    "@types/jest": "23.3.1",
    "@types/react": "16.4.11",
    "@types/react-dom": "16.0.7",
    "html-webpack-plugin": "3.2.0",
    "jest": "23.5.0",
    "react-testing-library": "5.0.0",
    "ts-jest": "23.1.3",
    "ts-loader": "4.5.0",
    "webpack": "4.16.5",
    "webpack-bundle-analyzer": "2.13.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "3.1.5"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.ts?(x)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "tests/__tests__/watch.spec.ts"
    ],
    "coverageReporters": [
      "text"
    ],
    "coverageDirectory": "test_coverage_dir",
    "collectCoverageFrom": [
      "src/**/*.tsx",
      "src/**/*.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
